</div>
<div class="container" style="padding:15px;">
      
    <div class="card container shadow p-3 mb-3 bg-white rounded"  >
         
<div class="card marg shadow p-3 mb-5 bg-white rounded"  >
    <div class="card-header" style="color:orange">
        GPS Location :<p style="color:red">*Please Click Upload Location</p>
       <div id="loc" style="float: right;background-color:green;color:white;padding-left:15px;padding-right:15px;display:none">Location Uploaded Successfully </div>
        </div>
        <br><br>
        <button onclick="getLocation()"class="btn btn-info">UPLOAD YOUR LOCATION</button>
</div><br>       
<form method="post">  
<div class="card marg shadow p-3 mb-5 bg-white rounded"  >
    <div class="card-header" style="color:orange">
    Basic Info:
    </div>
    <div class="card-body">
     <b>Email:</b> 
      <input id="email" name="email" class="form-control ht" value= "<%= data.email %>" readonly/><br>
      <b>  Name:</b>
      <input id="name" name="name" class="form-control ht" value= "<%= data.name %>"  disabled/><br>
      <b>  Aadhar Card No:</b>
      <input id="aadhar" name="aadhar" class="form-control ht" value= "<%= data.aadhar %>"   disabled/><br>
      <b>  Phone No:</b>
      <input id="phone" name="phone" class="form-control ht" value= ""  required /><br>
    </div>
  </div>
  <div class="card marg shadow p-3 mb-5 bg-white rounded"  >
        <div class="card-header" style="color:orange">
        Location Info:
        </div>
        <div class="card-body">
            <input type="text"  style="display: none;" id="lon" name="lon" readonly >
            <input type="text" style="display:none;" id="lat" name="lat" readonly >
            <b> Address Line 1:</b> 
            <input id="address1" name="address1" class="form-control ht" value= "" required /><br>
            <b> Address Line 2:</b> 
            <input id="address2" name="address2" class="form-control ht" value= "" required /><br>
            <b> Landmark:</b> 
            <input id="landmark" name="landmark" class="form-control ht" value= "" required/><br>
            <b> Pincode:</b> 
            <input id="pincode" name="pincode" class="form-control ht" value= "" required /><br>
            <b> City:</b> 
            <input id="city" name="city" class="form-control ht" value= "" required/><br>
           
        </div>
     
      </div>
    
      <div class="btn-group" role="group" aria-label="Basic example" style="width: 100%;">
        
            <button type="submit" formaction="/" id="can" class="btn btn-danger"  style="width: 50%;height:60px;">Cancel</button>
            <button type="submit" formaction="/exchange2" id="continue" class="btn btn-info" style="width: 50%;height:60px;" disabled>Continue</button>
        
            
          </div>
        </form>     

     
      </div>

</div>
<%-include footer.ejs %>

<script>
 
  
    function getLocation() {
      $('#continue').removeAttr('disabled');
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
        document.getElementById("loc").style.display="block"
      }
    }
    
    function showPosition(position) {
  
   document.getElementById("lat").value=position.coords.latitude;
   document.getElementById("lon").value= position.coords.longitude;
    }
          </script>
          <script>
            $(document).ready(function(){
              $("#can").click(function(){
                $('#email').removeAttr('required');
                $('#name').removeAttr('required');
                $('#phone').removeAttr('required');
                $('#aadhar').removeAttr('required');
                $('#address1').removeAttr('required');
                $('#address2').removeAttr('required');
                $('#landmark').removeAttr('required');
                $('#pincode').removeAttr('required');
                $('#city').removeAttr('required');
               
              });
            });
          </script>
